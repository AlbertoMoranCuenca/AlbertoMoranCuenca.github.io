---
const {name, icon,subName} = Astro.props
---
<div class="text-lg text-white font-bold flex gap-4 place-content-start place-items-center ">
  <img class="w-11" src={icon} alt={name}/>
  <div class="flex flex-col">
    <span>{name}</span>
    <span class="font-light uppercase text-xs">{subName}</span>
  </div>
</div>