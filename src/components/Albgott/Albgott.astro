---
import Tag from "./Tag.astro";
import Accordion from "./Accordion.astro";

---

<div class=" text-white flex place-content-center place-items-center overflow-hidden bg-slate-900 drop-shadow-md shadow-2xl rounded-3xl p-3 relative flex-col pb-8 text-center">
  <img class="rounded-t-3xl" src="/images/albgott.png"/>
  <h2 class=" mt-6 mb-4 lg:text-4xl font-bold">ALBGOTT (on development)</h2>
  <div class="flex gap-x-2 flex-wrap gap-y-2 justify-center ">
    <Tag color="bg-gray-500">microservices</Tag>
    <Tag color="bg-gray-800">API REST</Tag>
    <Tag color="bg-amber-600">java</Tag>
    <Tag color="bg-lime-600">springboot</Tag>
    <Tag color="bg-blue-700">react</Tag>
    <Tag color="bg-yellow-800">jenkins</Tag>
    <Tag color="bg-sky-400">docker</Tag>
    <Tag color="bg-orange-600">rabbitmq</Tag>
    <Tag color="bg-orange-300">postman</Tag>
  </div>
  <a class="m-12 bg-amber-500 rounded-[30px] text-white font-bold px-12 py-3 outline outline-amber-500 outline-[3px] outline-offset-[3px] 
    hover:outline-offset-[4px]" 
    href="https://albgott.com" target="_blank">
    Go to app
  </a>
  <p class="w-11/12 md:w-3/4 lg:w-2/3 mb-10">
    Web application that covers everything from inventory and catalog managment to customer relations and sales supervision in the area of business managment.  
  <div class="w-11/12 md:w-3/4 lg:w-2/3 flex flex-col gap-y-4">
    <Accordion />
  </div>
</div>
